{
  "version": "1.2.0",
  "id": "@shopgate/magento-user",
  "trusted": true,
  "configuration": {
    "registrationUrl": {
      "type": "bigApi",
      "destination" : "backend",
      "default": null,
      "params": {
        "method":  "GET",
        "service": "config",
        "path": "/v1/shop/%(shopId)s/checkout_web_checkout_shopify?parsed=true",
        "key": "value.backend.registrationUrl"
      }
    },
    "magentoUrl" : {
      "type": "bigApi",
      "destination" : "backend",
      "default": null,
      "params": {
        "method":  "GET",
        "service": "config",
        "path": "/v1/shop/%(shopId)s/checkout_web_checkout_shopify?parsed=true",
        "key": "value.backend.magentoUrl"
      }
    },
    "credentials" : {
      "type": "bigApi",
      "destination" : "backend",
      "default": null,
      "params": {
        "method":  "GET",
        "service": "config",
        "path": "/v1/shop/%(shopId)s/checkout_web_checkout_shopify?parsed=true",
        "key": "value.backend.credentials"
      }
    },
    "getUserAccountSettings": {
      "type": "bigApi",
      "destination": "frontend",
      "default": "required",
      "params": {
        "method": "GET",
        "service": "config",
        "path": "/v1/shop/%(shopId)s/gui_sg_connect_user_account?parsed=true",
        "key": "value"
      }
    },
    "allowSelfSignedCertificate" : {
      "type": "bigApi",
      "destination" : "backend",
      "default": false,
      "params": {
        "method":  "GET",
        "service": "config",
        "path": "/v1/shop/%(shopId)s/checkout_web_checkout_shopify?parsed=true",
        "key": "value.backend.allowSelfSignedCertificate"
      }
    }
  },
  "components": [
    {
      "id": "RegisterSubscription",
      "path": "frontend/Register/subscribers.js",
      "type": "subscribers"
    },
    {
      "id": "CheckoutSubscription",
      "path": "frontend/Checkout/subscribers.js",
      "type": "subscribers"
    },
    {
      "id": "GuestCheckoutSubscription",
      "path": "frontend/portals/GuestCheckoutLink/subscribers.js",
      "type": "subscribers"
    },
    {
      "id": "GuestCheckoutLink",
      "path": "frontend/portals/GuestCheckoutLink/index.jsx",
      "target": "page.login.register-link.after",
      "type": "portals"
    },
    {
      "id": "GuestCheckoutLinkRoute",
      "path": "frontend/portals/GuestCheckoutLink/route.jsx",
      "target": "app.routes",
      "type": "portals"
    },
    {
      "id": "locale/en-US",
      "type": "translations",
      "path": "frontend/locale/en-US.json"
    },
    {
      "id": "locale/de-DE",
      "type": "translations",
      "path": "frontend/locale/de-DE.json"
    },
    {
      "id": "locale/fr-FR",
      "type": "translations",
      "path": "frontend/locale/fr-FR.json"
    },
    {
      "id": "locale/nl-NL",
      "type": "translations",
      "path": "frontend/locale/nl-NL.json"
    }
  ]
}
